<div class="page-title-box">
    <div class="row align-items-center mb-3">
        <div class="col-sm-12">
            <h3>{{title}}
                <div class="float-right">
                    <a href="/user/add" class="btn btn-block btn-danger"><i class="fa fa-plus"></i>
                        Pengguna</a>
                </div>
            </h3>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-sm myTable">
            <thead class="thead-dark">
                <th>No</th>
                <th>Username</th>
                <th>Nama Lengkap</th>
                <th>Role</th>
                <th>TPS</th>
                <th>Opsi</th>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{inc @index}}</td>
                    <td>{{username}}</td>
                    <td>{{fullname}}</td>
                    <td>{{role}}</td>
                    <td>{{tps.no_tps}}</td>
                    <td>
                        <a href="/user/edit/{{id}}" class="btn btn-success btn-sm">Ubah</a>
                        <a href="/user/cpw/{{id}}" class="btn btn-warning btn-sm">Ubah Password</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>