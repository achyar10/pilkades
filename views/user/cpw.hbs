<div class="page-title-box">
    <div class="row align-items-center mb-3">
        <div class="col-sm-12">
            <h4 class="page-title">{{title}}</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0);">Users</a></li>
                <li class="breadcrumb-item">{{title}}</li>
            </ol>
        </div>
    </div>
    <form action="/user/cpw/{{id}}" method="post">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <div class="row">
            <div class="col-md-9">
                <div class="form-group">
                    <label for="">Password Baru</label>
                    <input type="password" name="password" id="password" class="form-control"
                        placeholder="Masukkan kata sandi baru" onkeyup='check();'>
                </div>
                <div class="form-group">
                    <label for="">Konfirmasi Password </label>
                    <input type="password" name="passconf" id="passconf" class="form-control"
                        placeholder="Masukkan konfirmasi sandi baru" onkeyup='check();'>
                    <span id='message'></span>
                </div>
            </div>
            <div class="col-md-3">
                <button type="submit" id="btnSubmit" class="btn btn-success btn-block mt-4">Ubah </button>
                <a href="/user" class="btn btn-secondary btn-block">Kembali</a>
            </div>
        </div>
    </form>
</div>
<script>
    document.getElementById('btnSubmit').disabled = true;
    var check = function () {
        if (document.getElementById('password').value ==
            document.getElementById('passconf').value) {
            document.getElementById('message').style.color = 'green';
            document.getElementById('message').innerHTML = 'Password dan konfirmasi password cocok';
            document.getElementById('btnSubmit').disabled = false;
        } else {
            document.getElementById('message').style.color = 'red';
            document.getElementById('message').innerHTML = 'Password dan konfirmasi password tidak cocok!';
            document.getElementById('btnSubmit').disabled = true;
        }
    }
</script>