<div class="page-title-box">
    <div class="row align-items-center mb-3">
        <div class="col-sm-12">
            <h4 class="page-title">{{title}}</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0);">Profile</a></li>
                <li class="breadcrumb-item">{{title}}</li>
            </ol>
        </div>
    </div>
    <form action="/profile/edit" method="post">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <div class="row">
            <div class="col-md-9">
                <div class="form-group">
                    <label>Nama</label>
                    <input type="text" name="fullname" class="form-control" placeholder="Nama" value="{{data.fullname}}">
                </div>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-success btn-block">Ubah</button>
                <a href="/profile" class="btn btn-secondary btn-block">Kembali</a>
            </div>
        </div>
    </form>

</div>