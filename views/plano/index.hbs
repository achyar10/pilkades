<div class="page-title-box">
    <div class="row align-items-center mb-3">
        <div class="col-sm-12">
            <h4>{{title}}</h4>
        </div>
    </div>
    <div class="row">
        <div class="table-responsive">
            <table class="table table-sm">
                <tr>
                    <td>TPS</td>
                    <td>:</td>
                    <td>{{tps.no_tps}}</td>
                </tr>
                <tr>
                    <td>Alamat</td>
                    <td>:</td>
                    <td>{{tps.address}}</td>
                </tr>
                <tr>
                    <td>Penanggung Jawab</td>
                    <td>:</td>
                    <td>{{tps.pic}}</td>
                </tr>
                <tr>
                    <td>Total DPT</td>
                    <td>:</td>
                    <td>{{numberFormat tps.total_dpt}}</td>
                </tr>
                <tr>
                    <td>Status Plano</td>
                    <td>:</td>
                    <td>{{#ifCond tps.plano null}} <span class="badge badge-danger">Belum Upload</span> {{else}} <span class="badge badge-success">Sudah Upload</span> {{/ifCond}}</td>
                </tr>
            </table>
            <form action="" method="post" enctype="multipart/form-data" onsubmit="this.submit_button.disabled = true;">
            <input type="hidden" name="_csrf" value="{{csrf}}">
                <div class="form-group">
                    <label for="">Plano</label><br>
                    {{#ifCond tps.plano null}}
                    <img src="/images/no_image.png" class="img-thumbnail" id="target" alt="">
                    {{else}}
                    <img src="{{tps.plano}}" class="img-thumbnail" id="target" alt="">
                    {{/ifCond}}
                    <br>
                    <input type="file" id="plano" name="plano" required="">
                </div>
                <button type="submit" name="submit_button" class="btn btn-success">Simpan</button>
            </form>
        </div>
    </div>

</div>

<script>

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#target').attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#plano").change(function () {
        readURL(this);
    });

</script>